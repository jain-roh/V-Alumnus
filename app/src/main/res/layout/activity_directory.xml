<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ff7e7e7e"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Directory"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:id="@+id/almyr1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Year"
        android:textSize="20dp"
        android:textColor="#ffffff"

        />
    <Spinner
        android:id="@+id/alumni_year1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:padding="5dp"
        android:background="#ffffff"></Spinner>
    <TextView
        android:id="@+id/almbrnch1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Select Branch"
        android:textSize="20dp"
        android:padding="5dp"
        android:textColor="#ffffff"/>
    <Spinner
        android:padding="5dp"
        android:id="@+id/alumni_branch1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ffffff"
        ></Spinner>
    <TextView
        android:id="@+id/almdiv1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Select Division"
        android:textSize="20dp"
        android:textColor="#ffffff"/>
    <Spinner
        android:id="@+id/alumni_div1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ffffff"
       />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:id="@+id/listdetails"
      ></LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
