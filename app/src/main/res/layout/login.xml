<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
tools:context=".LoginActivity">

        <LinearLayout android:id="@+id/login_form" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical"
            >

            <LinearLayout android:id="@+id/email_login_form1" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="vertical"
                >
                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:gravity="center"
                    android:id="@+id/selectcat1">
                    <RadioButton android:id="@+id/radio_alumni1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="25dp"
                        android:paddingRight="25dp"
                        android:text="Alumni"
                        android:backgroundTint="#ff0"
                        android:checked="true"
                        android:elegantTextHeight="false" />
                    <RadioButton android:id="@+id/radio_faculty1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"

                        android:text="Faculty"
                        android:textColor="#000000"

                        android:checked="false" />
                </RadioGroup>


                <EditText android:id="@+id/eid1" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:hint="@string/prompt_usr"
                    android:inputType="text" android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:paddingTop="15dp"
                    android:paddingLeft="20dp"

                    android:paddingRight="20dp"
                    android:textColorHint="#ff555455"

                    />

                <EditText android:id="@+id/password1" android:layout_width="match_parent"
                    android:paddingTop="15dp"
                    android:paddingLeft="20dp"

                    android:paddingRight="20dp"
                    android:layout_height="wrap_content" android:hint="@string/prompt_password"
                    android:imeActionLabel="@string/sign_in"

                    android:textColor="#000000"
                    android:textColorHint="#ff555455"
                    android:imeOptions="actionUnspecified" android:inputType="textPassword"
                    android:maxLines="1" android:singleLine="true" />
</LinearLayout>
                <LinearLayout android:id="@+id/email_login_form2" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingLeft="20dp"

                    android:paddingRight="20dp"
                    android:weightSum="1">

                    <Button android:id="@+id/login" style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_weight=".80"
                    android:layout_height="wrap_content"
                        android:background="#ffff2c18"
                        android:textColor="#ffffff"
                    android:padding="5dp" android:text="@string/login"
                    android:textStyle="bold" />
                </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"

                android:layout_alignParentBottom="true"
                >

            <ImageView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_weight="1"

                android:background="@drawable/vkronus"
                android:layout_gravity="right"/>
</LinearLayout>
    </LinearLayout>
    </RelativeLayout>